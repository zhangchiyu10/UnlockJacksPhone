            <Ellipse x:Name="c12" Fill="#FFF4F4F5" Height="40" Canvas.Left="181" Stroke="Black" Canvas.Top="119" Width="40" MouseMove="c12_MouseMove"/>
            <Path x:Name="path" Data="" Stretch="Fill"  StrokeThickness="10" Stroke="Blue"/>

        </Canvas>
        <Button Content="Help me" HorizontalAlignment="Left" Margin="23,102.253,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click_1" RenderTransformOrigin="0.016,0.676"/>
        <TextBlock x:Name="TextBlock_Level_number" HorizontalAlignment="Left" Margin="198,85.76,0,0" TextWrapping="Wrap" Text="Level 1" VerticalAlignment="Top" Width="41.857"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="You have to borrow Jack's Android phone to call your girl friend, but Jack is a weird geek whose phone is weirder. To unlock the screen of his phone is a little hard. He only told you the start or the end spot which are red and green and &quot;Go in the farthest way&quot; as a hint." VerticalAlignment="Top" Margin="23,3.521,0,0" Width="318"/>
        <TextBlock x:Name="TextBlock_help" HorizontalAlignment="Left" Margin="24,124.776,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" MouseLeftButtonDown="Text_route_MouseLeftButtonDown"/>
        <Button x:Name="Button_Next" Content="Next" HorizontalAlignment="Left" Margin="258.056,83.76,0,0" VerticalAlignment="Top" Width="56" Click="Button_Next_Click"/>
        <Button x:Name="Button_Previous" Content="Previous" HorizontalAlignment="Left" Margin="122.451,83.76,0,0" VerticalAlignment="Top" Width="54" Click="Button_Previous_Click" RenderTransformOrigin="0,0.52"/>
        <TextBlock x:Name="TextBlock_hint" HorizontalAlignment="Left" Margin="122.451,107.253,0,0" TextWrapping="Wrap" Text="    " VerticalAlignment="Top"/>

    </Grid>
